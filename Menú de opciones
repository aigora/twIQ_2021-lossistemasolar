#include<stdio.h>
int main() {
int numero;
char c ;
 printf("Bienvenido al programa para aprender sobre el sistema solar.\n");
 printf("En primer lugar, Â¿te sientes preparado para evaluar tus conocimientos o quieres aprender mas sobre el espacio?\n");
 printf("Si sientes que necesitas saber mas sobre el universo antes de ponerte a prueba , escribe 'aprendizaje', si por el contrario consideras que ya estas preparado/a escribe 'evaluacion'\n");
 scanf("%c",&c);
 if (c=='evaluacion'){
 }
 else if (c=='aprendizaje'){
 
 printf("Elige sobre que quieres aprender: -Planetas del sistema solar, -galaxias o -curiosidades del universo.\n");
 printf("Introduce elcaracter en minusculas:\n");
do {
scanf("%d", &numero);
switch (numero) {
case 's':
printf("Informacion Sol.\n");
break;
case 'S':
printf("Informacion Sol.\n");
break;
case 3:
printf("Miercoles\n");
break;
case 4:
printf("Jueves\n");
break;
case 5:
printf("Viernes\n");
break;
case 6:
printf("Sabado\n");
break;
case 7:
printf("Domingo\n");
break;
default:
printf("Opcion incorrecta.\n");
}
} 
while (numero >= 0);
}

printf("Fin del programa.\n");

}
